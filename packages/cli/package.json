{
  "name": "@terminal-tones/cli",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "bin": {
    "terminal-tones": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "pnpm -w --filter @terminal-tones/core build && tsx src/index.ts --",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "postbuild": "chmod +x dist/index.js || true",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "@terminal-tones/core": "workspace:*",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11"
  },
  "devDependencies": {
    "execa": "^9.6.0",
    "strip-ansi": "^7.1.0"
  }
}
